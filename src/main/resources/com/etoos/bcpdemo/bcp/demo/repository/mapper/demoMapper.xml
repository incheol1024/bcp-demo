<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.etoos.bcpdemo.bcp.demo.repository.mapper.DemoMapper">

    <insert id="insertDemo" parameterType="com.etoos.bcpdemo.bcp.demo.model.vo.DemoVo">
        INSERT INTO DEMOENTITY VALUES (#{id}, #{name})
    </insert>

    <select id="findById" parameterType="long" resultType="com.etoos.bcpdemo.bcp.demo.model.vo.DemoVo">
        SELECT DEMO.ID, DEMO.NAME FROM DEMOENTITY DEMO WHERE DEMO.ID = #{id}
    </select>

    <update id="updateDemo" parameterType="com.etoos.bcpdemo.bcp.demo.model.vo.DemoVo">
        UPDATE DEMOENTITY SET name = #{name} WHERE ID = #{id}
    </update>

    <delete id="deleteDemo" parameterType="com.etoos.bcpdemo.bcp.demo.model.vo.DemoVo">
        DELETE FROM DEMOENTITY WHERE ID = #{id}
    </delete>


</mapper>